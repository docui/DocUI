<UserControl x:Class="Org.DocUI.Wpf.ExtendedTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
	<Grid Name="container">
		<DockPanel HorizontalAlignment="Stretch" Background="White">
			<TextBlock Name="watermark" DockPanel.Dock="Left" Background="Transparent" Margin="3,0,0,0"/>
			<StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
				<Image Name="img" />
			</StackPanel>
		</DockPanel>

		<TextBox Name="TextBlock" Background="Transparent"></TextBox>
	</Grid>
</UserControl>
